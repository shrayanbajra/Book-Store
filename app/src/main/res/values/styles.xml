<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyleH1">
        <item name="fontFamily">@font/libre_caslon_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="textStyleH2">
        <item name="fontFamily">@font/libre_caslon_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="textStyleH3">
        <item name="fontFamily">@font/proza_libre_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="textStyleBody">
        <item name="fontFamily">@font/proza_libre_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="textStyleByline">
        <item name="fontFamily">@font/proza_libre_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="textStyleLink">
        <item name="fontFamily">@font/proza_libre_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="textStylePrice">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="textStyleButton">
        <item name="fontFamily">@font/proza_libre_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Custom.TextInputLayout.Rounded.Corners" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/selector_catalog_search_field</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

</resources>